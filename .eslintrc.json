{
  "plugins": ["jsx-a11y"],
  "extends": [
    "next/core-web-vitals",
    "plugin:storybook/recommended",
    "prettier",
    "plugin:jsx-a11y/recommended"
  ],
  "rules": {
    "no-console": 1,
    "react/no-unescaped-entities": 1,
    "react/display-name": 1,
    "react-hooks/rules-of-hooks": 2,
    "react/jsx-no-useless-fragment": 1
  }
}
