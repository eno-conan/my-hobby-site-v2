{
  "$schema": "./node_modules/rome/configuration_schema.json",
  "formatter": {
    "indentStyle": "tab",
    "lineWidth": 120,
    "ignore": ["scripts/*.js"]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "warn",
        "noArrayIndexKey":"warn"
      }
    }
  }
}