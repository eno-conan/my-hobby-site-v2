{
  "$schema": "./node_modules/rome/configuration_schema.json",
  "formatter": {
    "indentStyle": "space",
    "indentSize": 2,
    "lineWidth": 120,
    "ignore": ["./node_modules/**/*.*"]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "off",
        "noArrayIndexKey":"warn"
      }
    },
    "ignore": [
      "./node_modules/**/*.*",
      "./.next/**/*.*"
  ]
  }
}